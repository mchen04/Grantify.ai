{
  "name": "grantify-backend",
  "version": "1.0.0",
  "description": "Backend API for Grantify.ai - AI-powered grant matching platform",
  "main": "src/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest",
    "update-grants": "ts-node scripts/updateGrants.ts",
    "update-grants-live": "ts-node scripts/updateGrantsLive.ts",
    "clear-grants": "ts-node scripts/clearGrants.ts",
    "update-schema": "ts-node scripts/runSchemaUpdate.ts",
    "cleanup-expired": "ts-node scripts/cleanupExpiredGrants.ts",
    "analyze-data": "ts-node scripts/analyzeGrantData.ts",
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles -u 1 src/**/*.d.ts dist/",
    "update-grants-no-ai": "ts-node scripts/updateGrantsNoAI.ts"
  },
  "keywords": [
    "grants",
    "ai",
    "recommendation",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.10.0",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mkdirp": "^3.0.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/xml2js": "^0.4.14",
    "copyfiles": "^2.4.1",
    "eslint": "^8.35.0",
    "jest": "^29.4.3",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
